    header.card-header
        h4.card-title Register
    form(method="POST" action='/register')
        div.form-row
            div.col.form-group
                label First name
                input.form-control(name="firstname")
            div.col.form-group
                label Last name
                input.form-control(name="lastname")
            div.col.form-group
                label User name
                input.form-control(name="username")
