extends ../layout
block content
    .container.top-margin-from-navigation
        .row
            .col-sm-10
                h5 Create Manager
            .col-sm-2.text-right
                a(href="/admin") return to admin

        .row
            .col-sm-7
            .col-sm-5
                header.card-header
                    h4.card-title Register Manager

                form(method="POST" action="/admin/create")
                    .form-row.mt-2
                        .col.form-group
                            label First Name:
                            input.form-control(name="firstname" type="text")
                        .col.form-group
                            label Last Name:
                            input.form-control(name="lastname" type="text")
                    .form-row.mt-2
                        .col.form-group
                            label NIN:
                            input.form-control(name="nin" type="text")

                    .form-row.mt-2
                        .col.form-group
                            label Email
                            input.form-control(name="email" type="email")

                    .form-row
                        .col.form-group
                            label Assign Password
                            input.form-control(type="password" name="password")

                    .form-row
                        .col.form-group
                        button.btn.btn-primary.btn-block Create Manager