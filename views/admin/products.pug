extends ../layout
block content
    .container.top-margin-from-navigation
        .row.mt-3
            .col-sm-10
                h3 #{title}
            .col-sm-2.text-right
                a(href="/admin") return to admin    
        .row.mt-3
            
            table.table
                thead.thead-dark
                    tr
                        th(scope="col") Serial
                        th(scope="col") Product Name
                        th(scope="col") Category
                        th(scope="col") Color
                        th(scope="col") Unit Cost
                        th(scope="col") Installment
                        th(scope="col") Edit
                        th(scope="col") Delete
                        
                    each product in products
                        tbody
                            td #{product.serial}
                            td #{product.productname}
                            td #{product.category}
                            td #{product.color}
                            td #{product.productcost}
                            td #{product.initialpay}
                            td  
                                - var productId = product._id
                                a(href=('/admin/products/edit/' +productId)) edit
                            td
                                form(action=("/admin/products/delete/" +productId), method="post")
                                    button.btn delete

        .row.mt-3
            .col-sm-10
            .col-sm-2
                a.btn.btn-primary(href="/products/add-product" role="button") Create Product